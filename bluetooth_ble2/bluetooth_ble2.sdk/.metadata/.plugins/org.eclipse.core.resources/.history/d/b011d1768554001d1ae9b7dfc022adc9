#include "connections.h"


bool createConnection(PmodBLE* InstancePtr, u32 GPIO_Address, u32 UART_Address, u32 AXI_ClockFreq, u32 Uart_Baud){
	BLE_Begin(InstancePtr, GPIO_Address, UART_Address, AXI_ClockFreq, Uart_Baud);
	return BLE_IsConnected(InstancePtr);
}

